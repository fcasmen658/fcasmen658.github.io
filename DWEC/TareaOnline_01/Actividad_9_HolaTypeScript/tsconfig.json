{
  "compilerOptions": {
    "target": "es6",
    "module": "none",
    "lib": ["dom", "es6"],
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": false
  },
  "include": [
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "*.js"
  ]
}